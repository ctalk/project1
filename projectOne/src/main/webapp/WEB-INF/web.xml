<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>Login</servlet-name>
  	<display-name>Login</display-name>
  	<description></description>
  	<servlet-class>com.revature.rkiesling.project1.Login</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AppException</servlet-name>
  	<display-name>AppException</display-name>
  	<description></description>
  	<servlet-class>com.revature.rkiesling.project1.AppException</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>DisplayException</servlet-name>
  	<display-name>DisplayException</display-name>
  	<description></description>
  	<servlet-class>com.revature.rkiesling.project1.util.DisplayException</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AdminImpl</servlet-name>
  	<display-name>AdminImpl</display-name>
  	<description></description>
  	<servlet-class>com.revature.rkiesling.project1.AdminImpl</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AddEmployee</servlet-name>
  	<display-name>AddEmployee</display-name>
  	<description></description>
  	<servlet-class>com.revature.rkiesling.project1.AddEmployee</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Login</servlet-name>
  	<url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DisplayException</servlet-name>
  	<url-pattern>/DisplayException</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AdminImpl</servlet-name>
  	<url-pattern>/ExpenseAdmin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AddEmployee</servlet-name>
  	<url-pattern>/AddEmployee</url-pattern>
  </servlet-mapping>
  <error-page>
  	<exception-type>java.lang.Throwable</exception-type>
  	<location>/DisplayException</location>
  </error-page>
  <error-page>
  	<exception-type>com.revature.rkiesling.project1.UserNotFoundException</exception-type>
  	<location>/DisplayException</location>
  </error-page>
</web-app>
